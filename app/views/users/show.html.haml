.ui.container
  %p#notice= notice

  %p
    = image_tag @user.gravatar_url

  %p
    %b Name:
    = @user.name
  %p
    %b Email:
    = @user.email
  - if owner(@user.id)
    .ui.buttons
      = link_to 'Edit', edit_user_path(@user),
      class: 'ui green button'
      = link_to 'Destroy', @user, method: :delete,
      data: { confirm: 'Are you sure?' }, class: 'ui red button'
%br/
.ui.container.cards.two
  - @user.posts.each do |p|
    .card.fluid
      .content
        .header= link_to p.title, post_path(p.id)
        .description= p.body[0, 100]
      .extra.content
        %span.left.floated.like
          = render 'likes/likes', type: p, method: 'Post'
        %span.right.floated= p.created_at.to_s(:ru_datetime)
      - if owner(p.user_id)
        .extra.content
          %span.left.floated
            = link_to 'Edit', edit_post_path(p),
            class: 'ui green button'
            = link_to 'Destroy', p, method: :delete,
            data: { confirm: 'Are you sure?' },
            class: 'ui red button'
