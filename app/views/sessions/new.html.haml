.ui.container
  #alert= alert
  %h1 Login

  = form_tag sessions_path, {:class => 'ui form'} do |form|
    .field
      = label_tag :email
      = text_field_tag :email
    .field
      = label_tag :password
      = password_field_tag :password
    = submit_tag "Login", class: 'ui green button'
  .ui.center.aligned.basic.segment
    .ui.horizontal.divider or
    = link_to 'LogIn with Linkedin', '/auth/linkedin', class: 'ui button blue'
    = link_to 'LogIn with Facebook', '/auth/facebook', class: 'ui button blue'