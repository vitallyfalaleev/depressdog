.ui.container
  %h2
    Posts:
    = @posts.count
  = form_for(posts_path, :method => "get", id: "search-form",
  class: 'ui search') do |f|
    .ui.icon.input
      = text_field_tag :search, params[:search], placeholder: "Search",
      class: 'prompt'
      = f.button do
        %i.icon.search

  =render @posts
  = will_paginate @collection,
  renderer: WillPaginateSemanticUi::ActionView::Renderer