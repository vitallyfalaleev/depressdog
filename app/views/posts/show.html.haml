%p#notice= notice
.ui.container


  %h3.ui.header= @post.title
  %p= @post.body

  = link_to 'Edit', edit_post_path(@post), class: 'ui green button' if current_user && current_user.id == @post.user_id
  = link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui red button' if current_user && current_user.id == @post.user_id
