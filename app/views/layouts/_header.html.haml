.ui.inverted.pointing.menu.top
  .ui.container
    = link_to 'Home', root_path, class: 'item'
    = link_to 'Users', users_path, class: 'item'
  
    .right.menu
      %a.mobile_sidebar.item
        %i.sidebar.icon
      - if current_user
        -if current_user.email_confirmed?
          = link_to 'New Post', new_post_path, class: 'ui item window_sidebar'
        - else
          = link_to 'New Post', {flash_notice: 'Please confirm your email!'},class: 'ui item window_sidebar'
        = link_to current_user.name, user_path(current_user.id), class: 'item window_sidebar'
        = link_to 'Logout', logout_path, class: 'item window_sidebar'
      - else
        = link_to 'Login', login_path, class: 'ui item window_sidebar'
        = link_to 'SignUp', signup_path, class: 'ui item window_sidebar'

