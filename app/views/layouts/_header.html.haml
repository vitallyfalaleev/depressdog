.navbar.navbar-expand.navbar-dark.bg-dark
  .collapse.navbar-collapse
    %ul.navbar-nav
      %li.nav-item= link_to 'Home', root_path, class: 'nav-link'
      %li.nav-item= link_to 'Users', users_path, class: 'nav-link'
    %ul.navbar-nav.ml-auto
      - if current_user
        %li.nav-item= link_to current_user.name, user_path(current_user.id), class: 'nav-link'
        %li.nav-item= link_to 'Logout', logout_path, class: 'nav-link'
      - else
        %li.nav-item= link_to 'Login', login_path, class: 'nav-link'
        %li.nav-item= link_to 'SignUp', signup_path, class: 'nav-link'

%p#notice= notice
